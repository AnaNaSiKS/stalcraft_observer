<Window x:Class="stalcraft_observer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stalcraft_observer"
        mc:Ignorable="d"
        Title="AuctionHistory" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" >
            <ComboBox VerticalAlignment="Top" Name ="WeaponClass" SelectionChanged="Weapon">
                <ComboBoxItem Content="assault_rifle"/>

            </ComboBox>
            <ComboBox Name="NameId" SelectionChanged="History">
                
            </ComboBox>
            <Button VerticalAlignment="Bottom" Height="60" Name="ButtonGetHistory" Click="ButtonGetHistory_Click"/>
        </StackPanel>
    </Grid>
</Window>
